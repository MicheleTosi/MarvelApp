<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4dp"
    app:cardCornerRadius="@dimen/padding_5dp"
    app:cardElevation="@dimen/padding_4dp">

    <RelativeLayout
        android:id="@+id/row_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_192dp"
            android:contentDescription="@string/character"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/padding_156dp"
            android:background="@drawable/item_background"
            android:maxLines="1"
            android:padding="@dimen/padding_8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/manrope_bold"
            android:textSize="16sp"
            tools:text="IronMan" />

        <CheckBox
            android:id="@+id/ck_favorite"
            android:layout_width="@dimen/padding_30dp"
            android:layout_height="@dimen/padding_18dp"
            android:layout_alignTop="@+id/txtName"
            android:layout_alignBottom="@+id/txtName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/padding_7dp"
            android:layout_marginEnd="@dimen/padding_10dp"
            android:layout_marginBottom="@dimen/padding_7dp"
            android:button="@null"
            android:background="@drawable/my_checkbox"
            android:checked="false"
            app:useMaterialThemeColors="false" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>