<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/padding_150dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4dp"
    android:backgroundTint="#00000000"
    app:cardCornerRadius="@dimen/padding_5dp"
    app:cardElevation="@dimen/padding_4dp">

    <RelativeLayout
        android:id="@+id/row_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_8dp">

        <ImageView
            android:id="@+id/imgThumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_200dp"
            android:contentDescription="@string/comics"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgThumbnail"
            android:layout_marginTop="@dimen/padding_38dp"
            android:background="@drawable/item_background"
            android:maxLines="4"
            android:lines="2"
            android:padding="@dimen/padding_8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/manrope_bold"
            android:textSize="16sp"
            tools:text="IronMan"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>